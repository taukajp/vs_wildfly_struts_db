// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
  "name": "Java",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  // "image": "mcr.microsoft.com/devcontainers/java:1-11-bullseye",
  // "build": {
  //   "context": "."
  //   "dockerfile": "../Dockerfile",
  // },
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/myapp",

  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "none",
      "installMaven": "true",
      "mavenVersion": "3.9.9",
      "installGradle": "false"
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // This can be used to network with other containers or the host.
  // "forwardPorts": [],

  // Use 'initializeCommand' to run on the host machine before the container is created.
  "initializeCommand": "touch .devcontainer/.env",

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": ".devcontainer/postCreateCommand.sh",

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "vscode",

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "editor.tabSize": 2,
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "args": [
              "-l"
            ]
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "emmet.triggerExpansionOnTab": true,
        "emmet.includeLanguages": {
          "jsp": "html"
        },
        "java.debug.settings.hotCodeReplace": "auto",
        "java.configuration.updateBuildConfiguration": "automatic",
        "[java]": {
          "editor.tabSize": 4,
          "editor.defaultFormatter": "redhat.java"
        },
        "[xml]": {
          "editor.defaultFormatter": "redhat.vscode-xml"
        },
        "sqltools.connections": [
          {
            "name": "PostgreSQL Database",
            "driver": "PostgreSQL",
            "server": "db-postgres",
            "port": 5432,
            "database": "myappdb",
            "username": "docker",
            "password": "",
            "previewLimit": 50
          }
        ]
      },
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.vscode-server-connector",
        "redhat.vscode-xml",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg"
      ]
    }
  }
}
